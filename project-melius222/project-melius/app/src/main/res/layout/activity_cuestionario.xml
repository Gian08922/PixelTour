<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blancoFlow"
    tools:context=".CuestionarioActivity">


    <!-- Componente AppBarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ajustesLayout"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="@color/cremaFlow"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@color/cremaFlow"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            app:layout_scrollFlags="scroll|enterAlways" />

    </com.google.android.material.appbar.AppBarLayout>



    <!-- Fecha -->


    <!--Cerrar-->

    <!-- Caja ajustes -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="337dp"
        android:layout_height="572dp"
        android:background="#F3F2F1"
        android:elevation="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ajustesLayout"
        app:layout_constraintVertical_bias="0.061"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tituloAjustes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comicneue_bold"
            android:gravity="center"
            android:text="Cuestionario"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/rgDescansos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ajustesLayout"
            app:layout_constraintVertical_bias="0.861"
            tools:ignore="MissingConstraints" />

        <!-- Descansos -->

        <TextView
            android:id="@+id/tituloDescansos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comicneue_regular"
            android:gravity="center"
            android:text="Productividad"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/rgDescansos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ajustesLayout"
            app:layout_constraintVertical_bias="0.861"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1 : Muy poca" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="3 : Media" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="5 : Mucha" />
        </LinearLayout>


        <RadioGroup
            android:id="@+id/rgProdu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/prod1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow"
                android:checked="true"
                android:textColorHighlight="@color/rojoFlow"
                android:textColorLink="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/prod2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/prod3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/prod4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/prod5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

        </RadioGroup>

        <!-- Volumen -->

        <TextView
            android:id="@+id/tituloVolumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/comicneue_regular"
            android:gravity="center"
            android:text="Concentración"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/rgVolumen"
            app:layout_constraintTop_toBottomOf="@+id/rgDescansos"
            app:layout_constraintVertical_bias="0.711"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1 : Muy poca" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:text="3 : Media" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="5 : Mucha" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rgConc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/conc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow"
                android:checked="true" />

            <RadioButton
                android:id="@+id/conc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/conc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/conc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/conc5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

        </RadioGroup>

        <TextView
            android:id="@+id/tituloEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comicneue_regular"
            android:gravity="center"
            android:text="¿Como te sientes?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/rgVolumen"
            app:layout_constraintTop_toBottomOf="@+id/rgDescansos"
            app:layout_constraintVertical_bias="0.711"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Cansado" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Estresado" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Tranquilo" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Satisfecho" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rgEstado"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/est1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow"
                android:checked="true" />

            <RadioButton
                android:id="@+id/est2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/est3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />

            <RadioButton
                android:id="@+id/est4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/rojoFlow"
                android:buttonTint="@color/rojoFlow" />


        </RadioGroup>

        <TextView
            android:id="@+id/tituloFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comicneue_regular"
            android:gravity="center"
            android:text="¡Gracias por tu feedback!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/rgVolumen"
            app:layout_constraintTop_toBottomOf="@+id/rgDescansos"
            app:layout_constraintVertical_bias="0.711"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/finalizarCuestionarioBoton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/blancoFlow"
        android:contentDescription="cerrar sesión"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/bb_enviar"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>